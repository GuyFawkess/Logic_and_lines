            <line
                x1="100"
                y1="15"
                x2="100"
                y2="40"
                transform="rotate(0 100 100)"></line>
            <line
                x1="100"
                y1="15"
                x2="100"
                y2="40"
                transform="rotate(36 100 100)"></line>
            <line
                x1="100"
                y1="15"
                x2="100"
                y2="40"
                transform="rotate(-72 100 100)"></line>
            <line
                x1="100"
                y1="15"
                x2="100"
                y2="40"
                transform="rotate(72 100 100)"></line>
        </g>
    </svg>

    <h3 class="gauge-title">Mayor Velocidad Operativa</h3>
</div>

<style>
    :root {
        --color-bg: #0d1a1f;
        --color-bg-alt: #16262e;
        --color-card: #16262e;
        --color-primary: #e5a525;
        --color-primary-hover: #f0b83a;
    }

    .gauge-container {
        width: 320px;
        background-color: var(--color-card);
        padding: 30px 20px;
        border-radius: 20px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.05);
        cursor: pointer;
        transition: transform 0.3s ease;
