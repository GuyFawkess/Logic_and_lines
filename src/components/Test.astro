<div class="gauge-container">
    <svg viewBox="0 0 200 120" class="gauge">
        <defs>
            <linearGradient id="grad-brand" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop
                    offset="0%"
                    style="stop-color: var(--color-primary); stop-opacity: 1"
                ></stop>
                <stop
                    offset="100%"
                    style="stop-color: var(--color-primary-hover); stop-opacity: 1"
                ></stop>
            </linearGradient>
        </defs>

        <path
            d="M20,100 A80,80 0 0,1 180,100"
            fill="none"
            stroke="#0D1A1F"
            stroke-width="18"
            stroke-linecap="butt"></path>

        <path
            d="M20,100 A80,80 0 0,1 180,100"
            fill="none"
            stroke="url(#grad-brand)"
            stroke-width="18"
            stroke-dasharray="251.32"
            stroke-dashoffset="201.05"
            class="progress-arc"></path>

        <g stroke="var(--color-bg)" stroke-width="2.5">
            <line
                x1="100"
                y1="15"
                x2="100"
                y2="40"
