---
import BookButton from "../components/BookButton.astro";
import { useTranslations } from "../i18n/utils";

const { currentLang = 'en' } = Astro.props;
const t = useTranslations(currentLang);
interface Props {
  videoSrc?: string;
  title?: string;
  subtitle?: string;
  currentLang?: string;
}

const { 
  videoSrc = '/public/uCLsXBlZ0CNUQzP58kcPxMlUU.mp4',
  title = 'Your Main Heading',
  subtitle = 'Your subtitle or description'
} = Astro.props;
---
<!-- Astro component template (editing within the main <section>) -->
<section class="relative w-full min-h-screen flex items-center justify-center overflow-hidden bg-black">
  <!-- Video Background Layer 1 -->
  <div class="absolute inset-y-0 left-0 w-1/2 overflow-hidden opacity-60 hidden md:block">
    <video
      autoplay
      muted
      loop
      playsinline
      class="w-full h-full object-cover rotate-90 origin-center"
      style="filter: sepia(1) saturate(500%) hue-rotate(340deg) brightness(0.9);"
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>

  <!-- Video Background Layer 2 (Mirrored horizontally on the right) -->
  <div class="absolute inset-y-0 right-0 w-1/2 overflow-hidden opacity-40 hidden md:block">
    <video
      autoplay
      muted
      loop
      playsinline
      class="w-full h-full object-cover -rotate-90 origin-center"
      style="filter: sepia(1) saturate(500%) hue-rotate(340deg) brightness(0.9);"
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>

  <!-- Mobile-only Top Video -->
  <div class="absolute top-0 inset-x-0 w-full h-1/2 overflow-hidden opacity-60 md:hidden">
    <video
      autoplay
      muted
      loop
      playsinline
      class="w-full h-full object-cover rotate-180 origin-center"
      style="filter: sepia(1) saturate(500%) hue-rotate(340deg) brightness(0.9);"
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>

  <!-- Mobile-only Bottom Video -->
  <div class="absolute bottom-0 inset-x-0 w-full h-1/2 overflow-hidden opacity-60 md:hidden">
    <video
      autoplay
      muted
      loop
      playsinline
      class="w-full h-full object-cover"
      style="filter: sepia(1) saturate(500%) hue-rotate(340deg) brightness(0.9);"
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>

  <!-- Overlay for better text readability -->
  <div class="absolute top-0 left-0 w-full h-full bg-gradient-radial from-black/30 via-black/50 to-black/70 z-10"></div>

  <!-- Content -->
  <div class="relative z-20 text-center text-white max-w-7xl px-8 md:px-4">
    <h1 class="text-5xl md:text-6xl lg:text-8xl font-bold mb-6 leading-tight drop-shadow-[2px_2px_20px_rgba(0,0,0,0.5)]">
      {title}
    </h1>
    <p class="text-lg md:text-xl lg:text-2xl mb-8 opacity-90 max-w-3xl mx-auto drop-shadow-[1px_1px_10px_rgba(0,0,0,0.5)]">
      {subtitle}
    </p>
    <div class="flex gap-4 justify-center flex-wrap">
      <button class="px-8 py-4 text-base font-semibold border-none rounded-lg cursor-pointer transition-all duration-300 uppercase tracking-wider bg-gradient-to-br from-indigo-500 to-purple-600 text-white hover:-translate-y-0.5 hover:shadow-[0_10px_30px_rgba(102,126,234,0.4)]">
        Get Started
      </button>
      <button class="px-8 py-4 text-base font-semibold border-2 border-white rounded-lg cursor-pointer transition-all duration-300 uppercase tracking-wider bg-transparent text-white hover:bg-white hover:text-black hover:-translate-y-0.5">
        Learn More
      </button>
    </div>
  </div>
</section>
