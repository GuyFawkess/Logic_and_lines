---
import BookButton from "../components/BookButton.astro";
import { useTranslations } from "../i18n/utils";

const { currentLang = "es" } = Astro.props;
const t = useTranslations(currentLang);

interface Props {
  leftTitle?: string;
  leftFancyWord?: string;
  rightTitle?: string;
  rightFancyWord?: string;
  currentLang?: string;
}

const {
  leftTitle: propLeftTitle,
  leftFancyWord: propLeftFancy,
  rightTitle: propRightTitle,
  rightFancyWord: propRightFancy,
} = Astro.props;

const leftTitle = propLeftTitle || t.hero.leftTitle;
const leftFancyWord = propLeftFancy || t.hero.leftFancy;
const rightTitle = propRightTitle || t.hero.rightTitle;
const rightFancyWord = propRightFancy || t.hero.rightFancy;
---

<section
  class="relative w-full min-h-screen overflow-hidden bg-(--color-bg) shadow-2xl"
>
  <!-- Left Side -->
  <div id="left-side" class="side-panel left-panel">
    <div class="content-wrapper">
      <h2 class="hero-title">
        {leftTitle}
        <span class="fancy-text left-fancy">{leftFancyWord}</span>
      </h2>
      <BookButton
        currentLang={currentLang}
        class="md:hidden"
        buttonClass="!bg-[var(--color-primary)] !text-[var(--color-bg)] hover:!text-[var(--color-card)]"
        text="¡Llama ahora!"
      />
    </div>
  </div>

  <!-- Right Side -->
  <div id="right-side" class="side-panel right-panel">
    <div class="content-wrapper">
      <h2 class="hero-title">
        {rightTitle}
        <span class="fancy-text right-fancy">{rightFancyWord}</span>
      </h2>
      <BookButton
        currentLang={currentLang}
        class="md:hidden"
        buttonClass="!bg-[var(--color-bg)] !text-[var(--color-primary)] hover:!bg-[var(--color-bg)]/90 hover:!text-[var(--color-primary)]/80"
        text="¡Llama ahora!"
      />
    </div>
  </div>

  <!-- Mobile Drag Handle -->
  <div id="drag-handle" class="drag-handle">
    <div class="drag-line"></div>
    <div class="drag-icon">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </div>
    <div class="drag-line"></div>
  </div>

  <!-- Bottom Fade Gradient -->
  <!-- <div
    class="absolute bottom-0 left-0 right-0 h-64 pointer-events-none z-20"
    style="background: linear-gradient(to bottom, transparent 0%, transparent 20%, rgba(var(--color-bg-rgb, 3, 7, 18), 0.1) 40%, rgba(var(--color-bg-rgb, 3, 7, 18), 0.3) 60%, rgba(var(--color-bg-rgb, 3, 7, 18), 0.6) 80%, var(--color-bg, rgb(3, 7, 18)) 100%);"
  >
  </div> -->
</section>

<style>
  /* Fonts loaded in Layout.astro */

  .side-panel {
    display: grid;
    height: 100vh;
    overflow: hidden;
    place-items: center;
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
  }

  .content-wrapper {
    margin: 0 10vw;
    width: 80vw;
    text-align: center;
  }

  .hero-title {
    font-family:
      "Manrope",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      sans-serif;
    font-size: clamp(1.5rem, 7vw, 4rem);
    font-weight: 800;
    margin: 0;
    line-height: 1.2;
  }

  .fancy-text {
    font-family: "Permanent Marker", cursive, sans-serif;
    font-size: 1.8em;
    line-height: 0.6em;
    display: inline-block;
    margin-top: 20px;
  }

  .left-panel {
    background-color: var(--color-bg, rgb(3, 7, 18));
    width: 60%;
    z-index: 2;
  }

  @media (min-width: 769px) {
    .left-panel {
      transition: width 0.1s ease-out;
    }
  }

  .left-panel .hero-title {
    color: var(--color-text, white);
  }

  .left-fancy {
    color: var(--color-primary, rgb(163, 230, 53));
  }

  .right-panel {
    background-color: var(--color-primary, rgb(163, 230, 53));
    width: 100%;
    z-index: 1;
  }

  .right-panel .hero-title {
    color: var(--color-bg, rgb(3, 7, 18));
  }

  .right-fancy {
    color: var(--color-text, white);
  }

  /* Drag Handle */
  .drag-handle {
    position: absolute;
    top: 50%;
    left: 60%;
    transform: translate(-50%, -50%);
    z-index: 10;
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 10px 8px;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 20px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    cursor: grab;
    user-select: none;
    touch-action: none;
    opacity: 0.3s ease;
    backdrop-filter: blur(4px);
  }

  @media (min-width: 769px) {
    .drag-handle {
      transition:
        left 0.1s ease-out,
        opacity 0.3s ease;
    }
  }

  .drag-handle:active {
    cursor: grabbing;
    background: rgba(255, 255, 255, 0.95);
  }

  .drag-line {
    width: 20px;
    height: 2px;
    background: var(--color-primary, rgb(163, 230, 53));
    border-radius: 2px;
    opacity: 0.7;
  }

  .drag-icon {
    display: flex;
    align-items: center;
    gap: 2px;
    color: var(--color-bg, rgb(3, 7, 18));
    animation: wiggle 2s ease-in-out infinite;
    opacity: 0.8;
  }

  .drag-icon svg {
    width: 16px;
    height: 16px;
  }

  @keyframes wiggle {
    0%,
    100% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-3px);
    }
    75% {
      transform: translateX(3px);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-title {
      font-size: clamp(2rem, 10vw, 4rem);
    }

    .content-wrapper {
      margin: 0 8vw;
      width: 90vw;
      text-align: center;
    }

    .drag-handle {
      display: flex;
    }
  }
</style>
