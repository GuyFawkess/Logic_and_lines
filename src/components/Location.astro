---
import { useTranslations } from "../i18n/utils";

const { currentLang = 'en' } = Astro.props;
const t = useTranslations(currentLang);
---
<section
  id="location"
  class="w-full py-12 px-4 bg-(--color-accent) text-center shadow-md"
>
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-(--color-primary)">
      {t.location.title}
    </h2>
    <div class="flex flex-col md:flex-row gap-8 items-center">
      <img src="/public/smarthost/smarthost.png" class="w-1/2" alt="">

      <div data-duration="700" data-animate="fade-right" class="opacity-0 translate-x-10 w-full md:w-1/2 text-left relative">
        <h3 class="text-xl font-medium mb-2 text-(--color-bg)">
          Malai Thai Massage Lanzarote
        </h3>
        <p class="mb-4 leading-relaxed text-(--color-text)">
          {t.location.address}
        </p>
        <h4 class="text-(--color-text) mb-2 font-medium">
          {t.location.hours}
        </h4>
        <p class="text-(--color-text)">
          {t.location.schedule}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes pulseSlow {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.2);
    }
  }

  .animate-pulse-slow {
    animation: pulseSlow 4s ease-in-out infinite;
  }
</style>
