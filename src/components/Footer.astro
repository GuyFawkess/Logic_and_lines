---
import { useTranslations } from "../i18n/utils";
import SocialScroll from "./SocialScroll.astro";

const { currentLang } = Astro.props;
const t = useTranslations(currentLang);

const baseUrl = currentLang === "en" ? "/" : "/es/";
---

<footer
  class="w-full bg-(--color-bg) border-t border-(--color-bg-alt) pt-8 mt-20"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
      <!-- Mobile: First - Logo and Name / Desktop: Middle -->
      <div
        class="flex flex-col items-center justify-center gap-8 max-w-md mx-auto"
      >
        <a
          href={baseUrl}
          class="hover:scale-105 transition ease-in-out duration-150"
        >
          <img
            src="/logoEntero.svg"
            alt="Logic & Lines Logo"
            class="w-auto h-16 object-contain"
          />
        </a>

        <p
          class="text-gray-300 text-center text-sm md:text-sm leading-relaxed px-4"
        >
          Transformamos negocios con soluciones de inteligencia artificial y
          automatización. Más eficiencia, menos errores, mejores resultados.
        </p>

        <a
          href={`${baseUrl}#booking`}
          class="bg-(--color-primary) text-black font-semibold px-6 py-3 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-[#F59E0B]/50"
        >
          {currentLang === "es" ? "Agendar Llamada" : "Schedule a Call"}
        </a>
      </div>

      <!-- Mobile: Second - Navigation Links / Desktop: Left -->
      <nav class="flex flex-col gap-4 items-start m-12 lg:ml-24">
        <h4 class="text-lg font-medium underline">Navegación</h4>
        <a
          href={baseUrl}
          class="text-gray-400 hover:text-[#F59E0B] duration-300 text-lg font-medium transition-all hover:-translate-y-1"
        >
          {currentLang === "es" ? "Inicio" : "Home"}
        </a>
        <a
          href={`${baseUrl}#services`}
          class="text-gray-400 hover:text-[#F59E0B] transition-all hover:-translate-y-1 duration-300 text-lg font-medium"
        >
          {currentLang === "es" ? "Servicios" : "Services"}
        </a>
        <a
          href={currentLang === "en" ? "/contact" : "/es/contact"}
          class="text-gray-400 hover:text-[#F59E0B] transition-all hover:-translate-y-1 duration-300 text-lg font-medium"
        >
          {currentLang === "es" ? "Contacto" : "Contact"}
        </a>
        <a
          href="#testimonials"
          class="text-gray-400 hover:text-[#F59E0B] transition-all hover:-translate-y-1 duration-300 text-lg font-medium"
        >
          {currentLang === "es" ? "Opiniones" : "Testimonials"}
        </a>
      </nav>

      <!-- Mobile: Third - Social Scroll / Desktop: Right -->
      <div class="flex justify-center md:justify-start md:order-3">
        <SocialScroll />
      </div>
    </div>

    <!-- Bottom Copyright -->
  </div>
</footer>
