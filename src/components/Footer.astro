---
import { useTranslations } from "../i18n/utils";
import { Icon } from "astro-icon/components";

const { currentLang } = Astro.props;
const t = useTranslations(currentLang);

const baseUrl = currentLang === "en" ? "/en/" : "/";
---

<footer class="w-full bg-(--color-bg) border-t border-(--color-bg-alt) pt-8">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
      <!-- Mobile: First - Logo and Name / Desktop: Middle -->
      <div
        class="flex flex-col items-start justify-center gap-4 max-w-md ml-12"
      >
        <a
          href={baseUrl}
          class="hover:scale-105 transition ease-in-out duration-150"
        >
          <img
            src="/logoEntero.svg"
            alt="Logic & Lines Logo"
            class="w-auto h-14 object-contain"
          />
        </a>

        <p
          class="text-gray-300 text-left text-sm md:text-sm leading-relaxed px-0"
        >
          Transformamos negocios con soluciones de inteligencia artificial y
          automatizaciÃ³n. MÃ¡s eficiencia, menos errores, mejores resultados.
        </p>

        <a
          href={`${baseUrl}#booking`}
          class="bg-(--color-primary) text-black font-semibold px-6 py-3 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-[#F59E0B]/50"
        >
          {currentLang === "es" ? "Agendar Llamada" : "Schedule a Call"}
        </a>
      </div>

      <!-- Mobile: Second - Navigation Links / Desktop: Left -->
      <nav class="flex flex-col gap-2 items-start ml-12 lg:ml-24">
        <h4 class="text-lg font-semibold">NavegaciÃ³n</h4>
        <a
          href={baseUrl}
          class="text-gray-400 hover:text-[#F59E0B] duration-300 text-lg font-medium transition-all hover:-translate-y-1"
        >
          {currentLang === "en" ? "Home" : "Inicio"}
        </a>
        <a
          href={`${baseUrl}#benefits`}
          data-value={t.nav.benefits}
          class="text-gray-400 hover:text-[#F59E0B] transition-all hover:-translate-y-1 duration-300 text-lg font-medium"
        >
          {t.nav.benefits}
        </a>
        <a
          data-value={t.nav.services}
          href={`${baseUrl}#services`}
          class="text-gray-400 hover:text-[#F59E0B] transition-all hover:-translate-y-1 duration-300 text-lg font-medium"
        >
          {t.nav.services}
        </a>
        <a
          data-value={t.nav.process}
          href={`${baseUrl}#process`}
          class="text-gray-400 hover:text-[#F59E0B] transition-all hover:-translate-y-1 duration-300 text-lg font-medium"
        >
          {t.nav.process}
        </a>
        <a
          data-value={t.nav.reason}
          href={`${baseUrl}#reasons`}
          class="text-gray-400 hover:text-[#F59E0B] transition-all hover:-translate-y-1 duration-300 text-lg font-medium"
        >
          {t.nav.reason}
        </a>
      </nav>

      <!-- Mobile: Third - Social Scroll / Desktop: Right -->
      <div class="flex flex-col gap-6 ml-12 items-start md:order-3 mb-10">
        <h4 class="text-lg font-semibold">Conecta</h4>

        <div class="flex flex-wrap gap-4">
          <a
            href="#"
            aria-label="LinkedIn"
            class="p-2 border border-gray-600 rounded-lg hover:border-[#F59E0B] hover:text-[#F59E0B] transition-colors group hidden"
          >
            <Icon
              name="linkedin"
              class="w-5 h-5 text-gray-400 group-hover:text-[#F59E0B] transition-colors"
            />
          </a>
          <a
            href="#"
            aria-label="Instagram"
            class="p-2 border border-gray-600 rounded-lg hover:border-[#F59E0B] hover:text-[#F59E0B] transition-colors group hidden"
          >
            <Icon
              name="instagram"
              class="w-5 h-5 text-gray-400 group-hover:text-[#F59E0B] transition-colors"
            />
          </a>
          <a
            href="#"
            aria-label="Facebook"
            class="p-2 border border-gray-600 rounded-lg hover:border-[#F59E0B] hover:text-[#F59E0B] transition-colors group hidden"
          >
            <Icon
              name="facebook3"
              class="w-5 h-5 text-gray-400 group-hover:text-[#F59E0B] transition-colors"
            />
          </a>
          <a
            href="mailto:logicandlinestudios@gmail.com"
            aria-label="Email"
            class="p-2 border border-gray-600 rounded-lg hover:border-[#F59E0B] hover:text-[#F59E0B] transition-colors group"
          >
            <Icon
              name="gmail2"
              class="w-5 h-5 text-gray-400 group-hover:text-[#F59E0B] transition-colors"
            />
          </a>
          <a
            href="https://wa.me/34600000000"
            aria-label="WhatsApp"
            class="p-2 border border-gray-600 rounded-lg hover:border-[#F59E0B] hover:text-[#F59E0B] transition-colors group"
          >
            <Icon
              name="whatsapp"
              class="w-5 h-5 text-gray-400 group-hover:text-[#F59E0B] transition-colors"
            />
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Copyright -->
    <div
      class="w-full border-t mt-6 border-gray-600 py-2 text-center text-gray-400 flex flex-col md:flex-row justify-center items-center px-4"
    >
      <p>
        &copy; {new Date().getFullYear()} All rights reserved. Made with ðŸ’› by Logic
        & Lines.
      </p>
      <a
        href={currentLang === "en"
          ? "/en/privacy-policy"
          : "/politica-de-privacidad"}
        class="text-sm md:ml-24 hover:text-[#F59E0B] transition-colors mt-2 md:mt-0"
      >
        {t.privacy.link}
      </a>
    </div>
  </div>
</footer>
