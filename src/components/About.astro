---
import { useTranslations } from "../i18n/utils";
import SuccessCard from "./SuccessCard.astro";

const { currentLang = "en" } = Astro.props;
const t = useTranslations(currentLang);

---

<section
  id="about"
  class="w-full py-12 px-4 text-center shadow-sm"
>
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-semibold mb-8 text-[var(--color-terracotta)]">
      {t.about.title}
    </h2>
    <!-- CHANGED: Stack content vertically -->
    <div class="flex flex-col gap-8">
      <div
        data-duration="1000"
        data-animate="fade-up"
        class="opacity-0 translate-y-10 w-full text-center"
      >
        <h3 class="text-xl font-bold mb-4 text-[var(--color-accent)]">
          {t.about.subtitle}
        </h3>

        <p class="mb-4 leading-relaxed">
          {t.about.intro}
        </p>
      </div>

      <!-- INSERTED: Cards row under subtitle, side-by-side on md+ -->
      <div class="flex flex-col md:flex-row gap-8 w-full">
        <SuccessCard
          title=""
          description="Automated the entire sales funnel with AI agents."
        />
        <SuccessCard
          title="+300% Increase in Leads"
          description="Automated the entire sales funnel with AI agents."
        />
        
        <SuccessCard
          title="-50% Cost Reduction"
          description="Cut operational costs in half using smart workflows."
          accent="#5FB3A2"
        />
      </div>
    </div>
  </div>
</section>

<style>
  p,
  li {
    color: var(--color-deep-charcoal);
  }
</style>
