---
const { currentLang } = Astro.props;

const businessData = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  name: "Logic & Lines",
  image: "https://logicandlines.com/logoNav.png",
  url:
    currentLang === "en"
      ? "https://logicandlines.com/"
      : "https://logicandlines.com/es/",
  telephone: "+34628125302",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Centro Comercial Puerto Calero",
    addressLocality: "Puerto Calero",
    addressRegion: "Lanzarote",
    postalCode: "35570",
    addressCountry: "ES",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 28.9206442,
    longitude: -13.7052354,
  },
  sameAs: [
    "https://www.instagram.com/logicandlines",
    "https://www.facebook.com/logicandlines",
  ],
  description:
    currentLang === "en"
      ? "Logic & Lines: Marketing & AI Automation Agency. We transform businesses through advanced digital strategies and intelligent automation."
      : "Logic & Lines: Agencia de Marketing y Automatización con IA. Transformamos negocios mediante estrategias digitales avanzadas y automatización inteligente.",
};
---

<script type="application/ld+json" set:html={JSON.stringify(businessData)} />
