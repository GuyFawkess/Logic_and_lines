<div class="animation-container">
    <svg viewBox="0 0 300 150" preserveAspectRatio="xMidYMid meet">
        <defs>
            <linearGradient id="gradientFill" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%" style="stop-color:#f4a825;stop-opacity:0.3"
                ></stop>
                <stop offset="100%" style="stop-color:#f4a825;stop-opacity:0"
                ></stop>
            </linearGradient>
        </defs>

        <!-- Grid lines -->
        <line class="grid-line" x1="0" y1="120" x2="300" y2="120"></line>
        <line class="grid-line" x1="0" y1="90" x2="300" y2="90"></line>
        <line class="grid-line" x1="0" y1="60" x2="300" y2="60"></line>
        <line class="grid-line" x1="0" y1="30" x2="300" y2="30"></line>

        <!-- Axis -->
        <line class="grid-line" x1="30" y1="0" x2="30" y2="130"></line>
        <line class="grid-line" x1="30" y1="130" x2="300" y2="130"></line>

        <!-- Chart line -->
        <polyline class="chart-line" points="50,110 100,70 150,50 200,40 250,30"
        ></polyline>

        <!-- Chart fill -->
        <polygon
            class="chart-fill"
            points="50,110 100,70 150,50 200,40 250,30 250,130 200,130 150,130 100,130 50,130"
        ></polygon>

        <!-- Points with glow -->
        <circle class="chart-point-glow" cx="50" cy="110" r="8"></circle>
        <circle class="chart-point" cx="50" cy="110" r="5"></circle>

        <circle class="chart-point-glow" cx="150" cy="50" r="8"></circle>
        <circle class="chart-point" cx="150" cy="50" r="5"></circle>

        <circle class="chart-point-glow" cx="250" cy="30" r="8"></circle>
        <circle class="chart-point" cx="250" cy="30" r="5"></circle>
    </svg>
</div>

<style>
    .animation-container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    svg {
        width: 100%;
        height: 100%;
        filter: drop-shadow(0 0 20px rgba(244, 168, 37, 0.1));
        transition: filter 0.3s ease;
    }

    :global(.group:hover) svg {
        filter: drop-shadow(0 0 30px rgba(244, 168, 37, 0.2));
    }

    .chart-line {
        stroke: #f4a825;
        stroke-width: 3;
        fill: none;
        stroke-linecap: round;
        stroke-linejoin: round;
        filter: drop-shadow(0 0 8px rgba(244, 168, 37, 0.3));
    }

    .chart-point {
        fill: #f4a825;
        filter: drop-shadow(0 0 12px rgba(244, 168, 37, 0.5));
    }

    .chart-point-glow {
        fill: none;
        stroke: #f4a825;
        stroke-width: 2;
        opacity: 0;
    }

    .chart-fill {
        fill: url(#gradientFill);
        opacity: 0.1;
    }

    .grid-line {
        stroke: rgba(244, 168, 37, 0.1);
        stroke-width: 1;
        stroke-dasharray: 4, 4;
    }

    /* Animaciones */
    @keyframes drawLine {
        from {
            stroke-dasharray: 1000;
            stroke-dashoffset: 1000;
        }
        to {
            stroke-dasharray: 1000;
            stroke-dashoffset: 0;
        }
    }

    @keyframes pulse {
        0%,
        100% {
            r: 5;
            opacity: 1;
        }
        50% {
            r: 7;
            opacity: 0.6;
        }
    }

    @keyframes glow {
        0%,
        100% {
            r: 8;
            opacity: 0;
        }
        50% {
            r: 14;
            opacity: 0.5;
        }
    }

    @keyframes pulseHover {
        0%,
        100% {
            r: 6;
            opacity: 1;
        }
        50% {
            r: 9;
            opacity: 0.8;
        }
    }

    @keyframes glowHover {
        0%,
        100% {
            r: 10;
            opacity: 0.3;
        }
        50% {
            r: 18;
            opacity: 0.7;
        }
    }

    .chart-line {
        animation: drawLine 2.5s ease-in-out forwards;
    }

    .chart-point {
        animation: pulse 2s ease-in-out infinite;
    }

    .chart-point:nth-child(2) {
        animation-delay: 0.2s;
    }

    .chart-point:nth-child(3) {
        animation-delay: 0.4s;
    }

    .chart-point-glow {
        animation: glow 2s ease-in-out infinite;
    }

    .chart-point-glow:nth-child(2) {
        animation-delay: 0.2s;
    }

    .chart-point-glow:nth-child(3) {
        animation-delay: 0.4s;
    }

    .chart-fill {
        animation: drawLine 2.5s ease-in-out forwards;
    }

    /* Hover effects */
    :global(.group:hover) .chart-point {
        animation: pulseHover 1s ease-in-out infinite;
    }

    :global(.group:hover) .chart-point-glow {
        animation: glowHover 1s ease-in-out infinite;
    }

    :global(.group:hover) .chart-line {
        filter: drop-shadow(0 0 16px rgba(244, 168, 37, 0.6));
    }
</style>
