---
import { useTranslations } from "../i18n/utils";

const {
  currentLang = "es",
  text,
  class: className = "",
  buttonClass = "",
} = Astro.props;
const t = useTranslations(currentLang);
const baseUrl = currentLang === "en" ? "/" : "/es/";
const displayText = text || t.buttons.book;
---

<a
  href={`${baseUrl}#booking`}
  class={`w-full flex justify-center items-center ${className}`}
>
  <button
    data-value={displayText}
    class={`whitespace-nowrap min-w-[220px] my-8 btn btn-xl bg-(--color-primary) text-(--color-bg) hover:text-(--color-card) border-2 border-transparent hover:bg-(--color-primary)/90 transition ease-in-out duration-300 font-semibold ${buttonClass}`}
    style="box-shadow: 0 0.5px 2px var(--color-primary);">{displayText}</button
  >
</a>

