---
import { getCollection } from "astro:content";
import { useTranslations } from "../i18n/utils";
import BookButton from "./BookButton.astro";
import ServiceCard from "./ServiceCard.astro";

const { currentLang = "en" } = Astro.props;
const t = useTranslations(currentLang);

const allServices = await getCollection("services");
const services = allServices.sort(
  (a: { data: { sortOrder?: number } }, b: { data: { sortOrder?: number } }) =>
    (a.data.sortOrder || 999) - (b.data.sortOrder || 999),
);
---

<section
  id="services"
  class="w-full pt-16 pb-40 px-4 bg-(--color-bg-alt) shadow-md relative"
>
  <div class="">
    <h2
      transition:name="services"
      class="text-4xl md:text-5xl font-bold mb-4 text-center"
    >
      Nuestros <span class="text-(--color-primary)">Servicios</span>
    </h2>
    <p
      class="text-(--color-text) text-lg md:text-xl max-w-2xl mx-auto mb-10 text-center"
    >
      Automatización e inteligencia artificial diseñadas para impulsar tu
      negocio.
    </p>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-8 mb-18 max-w-[1200px] mx-auto"
    >
      {
        services.map((service: { data: any; slug: string }, index: number) => {
          const { data, slug } = service;
          const title =
            currentLang === "en" && data.title_en ? data.title_en : data.title;
          const description =
            currentLang === "en" && data.description_en
              ? data.description_en
              : data.description;
          const specification =
            currentLang === "en" && data.specification_en
              ? data.specification_en
              : data.specification;
          const { img } = data;

          const serviceUrl =
            currentLang === "es" ? `/service/${slug}` : `/en/service/${slug}`;

          // Calculate grid spans
          const total = services.length;
          const isLast = index === total - 1;
          const isSecondToLast = index === total - 2;

          let mdClass = "md:col-span-1";
          if (total % 2 !== 0 && isLast) {
            mdClass = "md:col-span-2";
          }

          let lgClass = "lg:col-span-2";
          if (total % 3 === 1 && isLast) {
            lgClass = "lg:col-span-6";
          } else if (total % 3 === 2 && (isLast || isSecondToLast)) {
            lgClass = "lg:col-span-3";
          }

          const cardClassName = `${mdClass} ${lgClass}`;

          return (
            <ServiceCard
              title={title}
              description={description}
              specification={specification}
              img={img}
              link={serviceUrl}
              index={index}
              slug={slug}
              className={cardClassName}
            />
          );
        })
      }
    </div>
    <BookButton currentLang={currentLang} />
    <style>
      @keyframes pulseSlow {
        0%,
        100% {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1) rotate(-15deg);
        }
        50% {
          opacity: 0.95;
          transform: translate(-50%, -50%) scale(1.08) rotate(-15deg);
        }
      }
      @keyframes pulseSlowMobile {
        0%,
        100% {
          opacity: 1;
          transform: scale(1) rotate(-12deg);
        }
        50% {
          opacity: 0.95;
          transform: scale(1.08) rotate(-12deg);
        }
      }

      .animate-pulse-slow {
        animation: pulseSlow 4s ease-in-out infinite;
        transform-origin: center center;
      }

      .text-shadow-md {
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
      }

      .text-shadow-sm {
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
      }

      /* Mobile: always show all content centered */
      @media (max-width: 768px) {
        .card {
          height: 400px;
        }

        .card-overlay {
          opacity: 1;
          background: linear-gradient(
            to bottom,
            rgba(67, 77, 57, 0.4) 0%,
            rgba(67, 77, 57, 0.85) 100%
          );
        }

        /* Hide the desktop-only title on mobile */
        .card > div:nth-child(4) {
          display: none;
        }

        /* Show mobile content container centered with all content */
        .card .mobile-content {
          opacity: 1;
          transform: translateY(0);
          top: 0;
          bottom: 0;
          padding: 2rem;
          justify-content: center;
        }

        /* Show the title inside mobile content */
        .card .mobile-title {
          display: block;
        }

        .card .soon-ribbon {
          display: block;
          position: absolute;
          top: 3.75rem;
          left: 4rem;
          padding: 0.4rem 0.75rem;
          font-size: 0.95rem;
          line-height: 1;
          z-index: 40;
          opacity: 0.95;
          box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
          transform-origin: left center;
          animation: pulseSlowMobile 4s ease-in-out infinite;
        }
      }

      /* Desktop: hide mobile title */
      @media (min-width: 769px) {
        .card .mobile-title {
          display: none;
        }
      }
    </style>
  </div>
  <svg
    class="absolute bottom-0 left-0 w-full h-16 md:h-24 text-(--color-bg) z-10 pointer-events-none"
    viewBox="0 0 1200 120"
    preserveAspectRatio="none"
    fill="currentColor"
  >
    <path d="M0,0 L540,0 L600,80 L660,0 L1200,0 L1200,120 L0,120 Z"></path>
  </svg>
</section>
