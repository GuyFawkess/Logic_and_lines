---
import { getCollection } from "astro:content";
import { useTranslations } from "../i18n/utils";
import BookButton from "./BookButton.astro";

const { currentLang = "en" } = Astro.props;
const t = useTranslations(currentLang);

const allServices = await getCollection("services");
const services = allServices.sort(
  (a: { data: { sortOrder?: number } }, b: { data: { sortOrder?: number } }) =>
    (a.data.sortOrder || 999) - (b.data.sortOrder || 999),
);

const soonSlugs = new Set(["smarthost", "digital-marketing"]);
---

<section id="services" class="w-full py-16 px-4 bg-(--color-bg-alt) shadow-md">
  <div class="max-w-6xl mx-auto">
    <h2
      transition:name="services"
      class="text-5xl font-extrabold mb-18 text-center text-(--color-primary)"
    >
      {t.service.title}
    </h2>

    <div class="flex flex-wrap justify-center gap-12 mb-18">
      {
        services.map((service: { data: any; slug: string }, index: number) => {
          const { data, slug } = service;
          const title =
            currentLang === "es" && data.title_es ? data.title_es : data.title;
          const description =
            currentLang === "es" && data.description_es
              ? data.description_es
              : data.description;
          const { img } = data;

          const serviceUrl =
            currentLang === "es" ? `/es/service/${slug}` : `/service/${slug}`;

          return (
            <article
              data-duration="700"
              data-animate="zoom-in"
              class="opacity-0 scale-90 card group relative overflow-hidden rounded-2xl w-full h-[450px] max-w-[320px] md:w-[calc(50%-1rem)] md:max-w-[450px] lg:w-[calc(33.333%-1.5rem)] lg:max-w-[20rem] shadow-[0_10px_30px_rgba(0,0,0,0.2)] transition-all duration-500 ease-out hover:-translate-y-2 hover:shadow-[0_20px_40px_rgba(0,0,0,0.3)]"
            >
              {soonSlugs.has(slug) && (
                <div class="soon-ribbon whitespace-nowrap absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rotate-[-8deg] bg-(--color-accent) text-(--color-text) text-2xl font-bold px-10 py-6 rounded-xl shadow-2xl border-4 border-(--color-terracotta) animate-pulse-slow z-[18] transition-opacity duration-300 group-hover:hidden group-hover:-z-10 pointer-events-none">
                  Â¡Muy pronto!
                </div>
              )}

              <figure class="h-full m-0 relative overflow-hidden">
                <img
                  transition:name={`img-${slug}`}
                  src={`${img}`}
                  alt={`Thai massage service: ${title}`}
                  width="400"
                  height="300"
                  loading={index > 2 ? "lazy" : "eager"}
                  decoding={index > 2 ? "async" : "auto"}
                  class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110"
                />
              </figure>

              {/* Base overlay - always visible */}
              <div class="absolute inset-0 bg-gradient-to-b from-[rgba(67,77,57,0.3)] via-transparent to-[rgba(67,77,57,0.7)] z-10 pointer-events-none" />

              {/* Hover overlay - appears on hover */}
              <div class="card-overlay absolute inset-0 bg-gradient-to-b from-[rgba(67,77,57,0.5)] via-[rgba(67,77,57,0.8)] to-[rgba(67,77,57,0.95)] opacity-0 group-hover:opacity-100 transition-opacity duration-400 z-15 pointer-events-none" />

              {/* Title - always visible at top */}
              <div class="absolute top-0 left-0 right-0 p-6 z-[35] pointer-events-none">
                <h2 class="text-3xl font-bold text-(--color-text-dark)/70 text-center text-shadow-md">
                  {title}
                </h2>
              </div>

              {/* Description and button - appear on hover */}
              <div class="mobile-content absolute top-40 left-0 right-0 bottom-0 px-8 pb-8 z-25 flex flex-col justify-center items-center text-center opacity-0 translate-y-5 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-400 ease-out">
                <h2 class="mobile-title text-3xl font-bold text-(--color-primary) mb-4 text-shadow-md">
                  {title}
                </h2>
                <p class="text-(--color-text) text-base leading-relaxed mb-6 text-shadow-sm">
                  {description}
                </p>
                <div class="mt-auto">
                  <a
                    href={serviceUrl}
                    class="inline-block px-8 py-3 bg-(--color-primary) text-(--color-bg) rounded-lg font-semibold text-base border-2 border-transparent shadow-[0_4px_12px_rgba(0,0,0,0.2)] transition-all duration-300 hover:scale-105 hover:shadow-[0_6px_16px_rgba(0,0,0,0.3)] hover:bg-(--color-warm-sand) hover:text-(--color-terracotta) hover:border-(--color-terracotta)"
                    aria-label={`learn more about ${title}`}
                  >
                    {t.service.button}
                  </a>
                </div>
              </div>
            </article>
          );
        })
      }
    </div>
    <BookButton currentLang={currentLang} />
    <style>
      @keyframes pulseSlow {
        0%,
        100% {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1) rotate(-15deg);
        }
        50% {
          opacity: 0.95;
          transform: translate(-50%, -50%) scale(1.08) rotate(-15deg);
        }
      }
      @keyframes pulseSlowMobile {
        0%,
        100% {
          opacity: 1;
          transform: scale(1) rotate(-12deg);
        }
        50% {
          opacity: 0.95;
          transform: scale(1.08) rotate(-12deg);
        }
      }

      .animate-pulse-slow {
        animation: pulseSlow 4s ease-in-out infinite;
        transform-origin: center center;
      }

      .text-shadow-md {
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
      }

      .text-shadow-sm {
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
      }

      /* Mobile: always show all content centered */
      @media (max-width: 768px) {
        .card {
          height: 400px;
        }

        .card-overlay {
          opacity: 1;
          background: linear-gradient(
            to bottom,
            rgba(67, 77, 57, 0.4) 0%,
            rgba(67, 77, 57, 0.85) 100%
          );
        }

        /* Hide the desktop-only title on mobile */
        .card > div:nth-child(4) {
          display: none;
        }

        /* Show mobile content container centered with all content */
        .card .mobile-content {
          opacity: 1;
          transform: translateY(0);
          top: 0;
          bottom: 0;
          padding: 2rem;
          justify-content: center;
        }

        /* Show the title inside mobile content */
        .card .mobile-title {
          display: block;
        }

        .card .soon-ribbon {
          display: block;
          position: absolute;
          top: 3.75rem;
          left: 4rem;
          padding: 0.4rem 0.75rem;
          font-size: 0.95rem;
          line-height: 1;
          z-index: 40;
          opacity: 0.95;
          box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
          transform-origin: left center;
          animation: pulseSlowMobile 4s ease-in-out infinite;
        }
      }

      /* Desktop: hide mobile title */
      @media (min-width: 769px) {
        .card .mobile-title {
          display: none;
        }
      }
    </style>
  </div>
</section>
