---
const { currentLang = "en" } = Astro.props;
import { useTranslations } from "../i18n/utils";
const t = useTranslations(currentLang);
import BookButton from "./BookButton.astro";
const stepsIcons = [
  "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z", // Chat bubble
  "M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z", // Star
  "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z", // Cog
  "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" // Trending up graph
];
---

<section id="process" class="py-10 pb-18 px-4 w-full relative overflow-hidden bg-(--color-bg)">
  <div class="max-w-11/12 mx-auto relative z-10">
    <!-- Header -->
    <div class="text-center mb-16 w-full mx-auto">
      <h2 class="text-5xl font-extrabold mb-6 text-(--color-text)" set:html={t.process.title} />
      <p class="text-gray-300 text-xl max-w-6xl leading-relaxed">
        {t.process.subtitle}
      </p>
    </div>

    <!-- Steps Grid -->
    <div 
     data-duration="700"
     data-animate="fade-left"
     class="mb-18  grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 relative">
    

      {t.process.steps.map((item, index) => {
        return (
          <div class="group relative h-full w-full flex justify-center">
            <!-- Card -->
            <div class="w-full max-w-[320px] md:max-w-none bg-(--color-card) backdrop-blur-xl rounded-2xl py-6 px-4 h-full transition-all duration-500 flex flex-col
              border border-(--color-primary)/50 shadow-2xl shadow-(--color-primary)/10 translate-y-0
              md:border-(--color-card)/50 md:shadow-none md:translate-y-0
              md:hover:border-(--color-primary)/50 md:hover:shadow-2xl md:hover:shadow-(--color-primary)/10 md:hover:-translate-y-2">
              
              <!-- Top Row: Icon and Number -->
              <div class="flex justify-between items-start mb-6">
                <!-- Icon Box -->
                <div class="w-12 h-12 rounded-xl flex items-center justify-center transition-transform duration-300
                  scale-110 bg-(--color-primary) text-(--color-bg)
                  md:scale-100 md:bg-(--color-primary)/10 md:text-(--color-primary)
                  md:group-hover:scale-110 md:group-hover:bg-(--color-primary) md:group-hover:text-(--color-bg)">
                  <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke-width="2" 
                    stroke="currentColor" 
                    class="w-6 h-6"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" d={stepsIcons[index]} />
                  </svg>
                </div>
                
                <!-- Number -->
                <span class="text-4xl font-bold transition-all duration-500 font-display select-none
                  opacity-100 text-(--color-primary)/80
                  md:opacity-50
                  md:group-hover:opacity-100 md:group-hover:text-(--color-primary) group-hover:drop-shadow-[1px_1px_0_#000]">
                  {item.step}
                </span>
              </div>

              <!-- Content -->
              <h3 class="text-xl font-bold mb-3 transition-colors duration-300 text-(--color-primary) min-h-[3.5rem] flex items-center
                md:text-(--color-text-dark)
                md:group-hover:text-(--color-primary) group-hover:drop-shadow-[1px_1px_0_#000]">
                {item.title}
              </h3>
              
              <p class="text-(--color-text) text-sm mb-6 leading-relaxed min-h-[5rem] text-justify">
                {item.description}
              </p>

              <!-- List Items -->
              <ul class="space-y-2 border-t border-(--color-text)/65 pt-8">
                {item.items.map((listItem) => (
                  <li class="flex items-center text-sm transition-colors
                    text-(--color-text-dark)
                    md:group-hover:text-(--color-text)">
                    <span class="w-1.5 h-1.5 rounded-full bg-(--color-primary) mr-2"></span>
                    {listItem}
                  </li>
                ))}
              </ul>

              <!-- Bottom Glow Effect -->
              <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-(--color-primary) to-transparent transition-opacity duration-300
                opacity-100
                md:opacity-0
                md:group-hover:opacity-100"></div>
            </div>
          </div>
        );
      })}
    </div>
    
    <p class="text-center text-gray-300 text-lg max-w-5xl mx-auto mb-16 italic font-light">
      {t.process.quote}
    </p>

    <BookButton currentLang={currentLang} />
</div>

  <svg
    data-name="Layer 1"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1200 120"
    preserveAspectRatio="none"
    class="absolute -bottom-px left-0 w-full h-auto block z-10"
  >
    <path
      d="M1200,0 L307.75,114.72 L0,0 L0,120 L1200,120 Z"
      class="shape-fill"
      fill="var(--color-bg-alt)"
      fill-opacity="1"></path>
  </svg>
</section>
