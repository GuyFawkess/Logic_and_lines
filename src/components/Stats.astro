---
// Stats.astro
const stats = [
  {
    value: "85%",
    label: "Reducción de tiempo",
    subLabel: "en tareas repetitivas",
  },
  {
    value: "24/7",
    label: "Disponibilidad",
    subLabel: "Automatización continua",
  },
  {
    value: "95%",
    label: "Tasa de éxito",
    subLabel: "En implementaciones",
  },
];
---

<!-- bg-gradient-to-b from-[#0a1f1f] to-[#0f2f2f] -->
<section class="w-full pt-12 bg-(--color-bg-alt)">
  <div class="max-w-7xl mx-auto px-4 mb-8 mt-16">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-(--color-primary)">Resultados</span>
        <span class="text-(--color-text-dark)">que hablan</span>
      </h2>
      <p class="text-(--color-text) text-lg md:text-xl max-w-2xl mx-auto">
        Métricas reales de nuestros clientes que confían en nosotros
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      {
        stats.map((stat) => (
          <div class="text-center">
            <div class="text-5xl md:text-6xl font-bold text-[#F59E0B] mb-3">
              {stat.value}
            </div>
            <div class="text-(--color-text) text-xl font-bold mb-1">
              {stat.label}
            </div>
            <div class="text-(--color-text-dark) text-lg">{stat.subLabel}</div>
          </div>
        ))
      }
    </div>
  </div>

  <svg
    data-name="Layer 1"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1200 120"
    preserveAspectRatio="none"
    class="w-full h-auto -bottom-px block relative z-10 -mb-10"
  >
    <path
      d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19c-82.26-17.34-168.06-16.33-250.45.39-57.84,11.73-114,31.07-172,41.86A600.21,600.21,0,0,1,0,27.35V120H1200V95.8C1132.19,118.92,1055.71,111.31,985.66,92.83Z"
      class="shape-fill"
      fill="var(--color-bg)"
      fill-opacity="1"></path>
  </svg>
</section>
