---
import { useTranslations } from "../i18n/utils";

const { currentLang = "en" } = Astro.props;
const t = useTranslations(currentLang);
---

<section
    id="booking"
    class="py-20 px-4 w-full relative overflow-hidden bg-(--color-bg)"
>
    <div class="md:max-w-[75%] w-full mx-auto relative z-10">
        <div
            class="relative rounded-2xl p-8 md:p-12 text-center overflow-hidden bg-(--color-bg-alt) border border-(--color-card)/10 shadow-2xl"
        >
            <!-- Background Glow Effect (Optional, for aesthetic) -->
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-lg bg-(--color-primary)/5 blur-[100px] pointer-events-none rounded-full"
            >
            </div>

            <div class="relative z-10 flex flex-col items-center">
                <h2
                    transition:name="booking"
                    class="text-2xl md:text-3xl font-bold text-(--color-primary) mb-4"
                >
                    {t.booking.title}
                </h2>

                <p
                    class="text-base md:text-lg text-(--color-text)/80 max-w-2xl mb-8 leading-relaxed"
                >
                    {t.booking.text}
                </p>

                <a
                    href={currentLang === "en" ? "/contact" : "/es/contact"}
                    class="group md:group-hover:text-(--color-primary) group-hover:drop-shadow-[1px_1px_0_#000] relative inline-flex items-center justify-center gap-2 px-8 py-4 text-base font-semibold text-(--color-bg) transition-all duration-300 bg-(--color-primary) rounded-xl hover:bg-(--color-primary) hover:text-(--color-text) hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-(--color-primary) focus:ring-offset-2 focus:ring-offset-(--color-bg)"
                    style="box-shadow: 0 0.5px 2px var(--color-primary);"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="w-5 h-5"
                    >
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"
                        ></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    <span class="group-hover:drop-shadow-[1px_1px_0_#000]"
                        >{t.booking.button}</span
                    >
                </a>

                <p class="mt-6 text-sm text-(--color-text)/60">
                    {t.booking.footer}
                </p>
            </div>
        </div>

        <!-- Contact Information Bar -->
        <div class="mt-6">
            <div
                class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-12 px-6 py-4"
            >
                <!-- Phone -->
                <a
                    href="tel:+34600000000"
                    class="flex items-center gap-3 text-(--color-text)/80 hover:text-(--color-primary) transition-colors duration-300 group"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-(--color-primary) group-hover:scale-110 transition-transform duration-300"
                    >
                        <path
                            d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                        ></path>
                    </svg>
                    <span class="text-sm font-medium">+34 600 000 000</span>
                </a>

                <!-- Email -->
                <a
                    href="mailto:logicandlines@gmail.com"
                    class="flex items-center gap-3 text-(--color-text)/80 hover:text-(--color-primary) transition-colors duration-300 group"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-(--color-primary) group-hover:scale-110 transition-transform duration-300"
                    >
                        <path
                            d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                        ></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    <span class="text-sm font-medium"
                        >logicandlines@gmail.com</span
                    >
                </a>

                <!-- Location -->
                <div class="flex items-center gap-3 text-(--color-text)/80">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-(--color-primary)"
                    >
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                        ></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span class="text-sm font-medium">Espa√±a</span>
                </div>
            </div>
        </div>
    </div>
</section>
