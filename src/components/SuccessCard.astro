---
import { useTranslations } from "../i18n/utils";

// CHANGED: Remove currentLang from destructuring since we don't need translations here
const { img = 'https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp', title = 'Card Title', text = '' } = Astro.props;
---

<div class="custom-card"> 
  <div class="card-inner">
    <div class="image-container">
      <img
        src={img}
        alt={title}
        class="card-image" 
      />
    </div>
    
    <div class="card-content">
      <h2 class="card-title">{title}</h2>
      <p class="card-text">
        {text}
      </p>
    </div>
  </div>
</div>

<style>
.custom-card {
  width: 20rem; 
  height: auto;/* w-96 */
  min-height: 450px; /* CHANGED: altura fija */
  border-radius: 0.75rem;
  position: relative;
  overflow: hidden;
  background: var(--color-card, #2a3f4f);
  box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
}

.custom-card:hover:before {
  opacity: 1;
}

/* Efecto de brillo en el borde */
.custom-card:before {
  background: linear-gradient(
    45deg,
    transparent 5%,
    rgb(255, 215, 137) 50%,
    transparent 99%
  );
  border-radius: inherit;
  content: "";
  inset: 0px;
  opacity: 0;
  position: absolute;
  transition: opacity 400ms;
  z-index: 2;
  pointer-events: none;
  padding: 3px;
  -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
  -webkit-mask-composite: xor;
  mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
  mask-composite: exclude;
}

.card-inner {
  background-image: radial-gradient(
    rgba(255, 255, 255, 0.1) 1px, 
    transparent 1px
  );
  background-position: 50% 50%;
  background-size: 1.1rem 1.1rem;
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.image-container {
  height: 50%; /* CHANGED: exactamente la mitad */
  padding: 1rem; /* padding uniforme */
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: contain; /* CHANGED: mantiene proporci√≥n de la imagen */
  border-radius: 0.375rem;
  display: block;
}

.card-content {
  
  height: 50%; /* CHANGED: la otra mitad */
  padding: 2rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.card-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: inherit;
}

.card-text {
  font-size: 0.875rem;
  line-height: 1.5;
  color: inherit;
  opacity: 0.9;
}
</style>