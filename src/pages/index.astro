---
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import BenefitsList from '../components/BenefitsList.astro';
import Layout from '../layouts/Layout.astro';
import ServicesList from '../components/ServicesList.astro';
import ReasonsList from '../components/ReasonsList.astro';
import Opinion from '../components/Opinion.astro';
import BookButton from '../components/BookButton.astro';

// Add metadata for better SEO
const currentLang = 'en';
---

<Layout 
  title='main'
  description="Authentic Thai massage in Lanzarote. Professional Thai therapists offering traditional techniques for relaxation and wellness."
  ogImage="/hero-image-optimized.webp"
>
	<Hero currentLang={currentLang} />
	<Stats currentLang={currentLang} />
	<BenefitsList currentLang={currentLang} />
	<BookButton currentLang={currentLang} />
	<ServicesList currentLang={currentLang} />
	<BookButton currentLang={currentLang} />
	<Opinion currentLang={currentLang} />
	<ReasonsList currentLang={currentLang} />
	<BookButton currentLang={currentLang} />
</Layout>
