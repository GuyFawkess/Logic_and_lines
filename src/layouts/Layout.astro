---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getLanguageFromURL, useTranslations } from "../i18n/utils";
import StructuredData from "../components/StructuredData.astro";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage = "/logoNav.png" } = Astro.props;
const currentLang = getLanguageFromURL(Astro.url);
const t = useTranslations(currentLang);

// Create proper page title
const siteTitle = "Logic & Lines";
const fullTitle =
  title === "main" || title === "principal"
    ? siteTitle
    : `${title} | ${siteTitle}`;

// Default description if none provided
const metaDescription =
  description ||
  (currentLang === "en"
    ? "Logic & Lines: Marketing & AI Automation Agency. We transform businesses through advanced digital strategies and intelligent automation."
    : "Logic & Lines: Agencia de Marketing y Automatización con IA. Transformamos negocios mediante estrategias digitales avanzadas y automatización inteligente.");

// Canonical URL
const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || "https://logicandlines.com",
);
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logoSolo.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="google-site-verification"
      content="93bXGfrbTzfsg5eqg_RvRBCIVYqGd_IWJrrpBLEDiTc"
    />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={metaDescription} />
    <meta
      name="keywords"
      content="marketing agency, AI automation, business automation, digital marketing, artificial intelligence, agencias de marketing, automatización de negocios, inteligencia artificial, consultoría IA, Logic & Lines, crecimiento de negocios, ganar más clientes, estrategias de crecimiento empresarial, captación de clientes, escalar ventas con IA, generación de leads, optimización de ingresos, growth marketing, automatización de ventas, transformación digital"
    />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta
      property="og:image"
      content={new URL(ogImage, Astro.site || "https://logicandlines.com")}
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={metaDescription} />
    <meta
      property="twitter:image"
      content={new URL(ogImage, Astro.site || "https://logicandlines.com")}
    />

    <ClientRouter />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Manrope:wght@400;500;600;700;800&family=Permanent+Marker&display=swap"
      rel="stylesheet"
    />

    <!-- Add alternate language links for SEO -->
    {
      currentLang === "en" && (
        <link
          rel="alternate"
          hreflang="es"
          href={`https://logicandlines.com${Astro.url.pathname.replace(/^\/(en\/)?/, "/es/")}`}
        />
      )
    }
    {
      currentLang === "es" && (
        <link
          rel="alternate"
          hreflang="en"
          href={`https://logicandlines.com${Astro.url.pathname.replace(/^\/(es\/)?/, "/")}`}
        />
      )
    }
    <link
      rel="alternate"
      hreflang="x-default"
      href={`https://logicandlines.com${Astro.url.pathname.replace(/^\/(en|es)\//, "/")}`}
    />

    <!-- Add this in the head section -->
    <link rel="preload" href="/heroSinTexto.webp" as="image" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <Header currentLang={currentLang} />
    <slot />
    <Footer currentLang={currentLang} />
    <StructuredData currentLang={currentLang} />
    <script src="/scroll-animate.js" defer></script>
    <!-- Added: persistent hero initializer to re-run on astro:page-load -->
    <script src="/hero-init.js" defer></script>
  </body>
</html>

<style>
  html,
  body {
    background-color: var(--color-bg);
    font-family: "Inter", sans-serif;
    margin: 0;
    width: 100%;
    height: 100%;
    justify-items: center;
    color: #ebe7d9;
    overflow-x: hidden;
  }
</style>
